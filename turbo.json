{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
       "env": [
        "DEPLOYER_PRIVATE_KEY",
        "CELO_RPC",
        "TREASURY_PRIVATE_KEY",
        "CELO_SEPOLIA_RPC",
        "NEXT_PUBLIC_PROJECT_ID",
        "STORACHA_SPACE_DID",
        "ADMIN_EMAIL"
      ]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
