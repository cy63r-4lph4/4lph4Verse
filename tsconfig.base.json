{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler", // or "nodenext"
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@verse/core/*": ["contracts/core/src/*"],
      "@verse/contracts/hirex/*": ["contracts/hirex/src/*"],
      "@verse/contracts/utils/*": ["contracts/utils/src/*"],

      "@verse/sdk/*": ["packages/sdk/*"],
      "@verse/ui/*": ["packages/ui/*"],
      "@verse/config/*": ["packages/config/src/*"],
      "@verse/providers/*": ["packages/providers/*"],

      "@verse/services/faucet/*": ["services/faucet/src/*"],
      "@verse/services/relayer/*": ["services/relayer/src/*"],

      "@verse/hirex/*": ["apps/hirex-web/*"],
      "@verse/leasevault/*": ["apps/leasevault-web/*"],
      "@verse/*": ["apps/verse-core/app/*"]
    }
  }
}
