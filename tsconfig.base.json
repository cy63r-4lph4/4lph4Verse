{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@verse/sdk": ["packages/sdk/src"],
      "@verse/sdk/*": ["packages/sdk/src/*"],

      "@verse/providers": ["packages/providers"],
      "@verse/providers/*": ["packages/providers/*"],

      "@verse/ui": ["packages/ui"],
      "@verse/ui/*": ["packages/ui/*"],

      "@verse/config": ["packages/config"],
      "@verse/config/*": ["packages/config/*"],


      "@verse/services/relayer": ["services/relayer/src"],
      "@verse/services/relayer/*": ["services/relayer/src/*"],

      "@verse/hirecore-web": ["apps/hirecore-web"],
      "@verse/hirecore-web/*": ["apps/hirecore-web/*"],

      "@verse/leasevault-web": ["apps/leasevault-web"],
      "@verse/leasevault-web/*": ["apps/leasevault-web/*"],

      "@verse/vaultoflove-web": ["apps/vaultoflove-web"],
      "@verse/vaultoflove-web/*": ["apps/vaultoflove-web/*"],

      "@verse/versewallet-web": ["apps/versewallet-web"],
      "@verse/versewallet-web/*": ["apps/versewallet-web/*"],

      "@verse/profile-web": ["apps/profile-web"],
      "@verse/profile-web/*": ["apps/profile-web/*"],

      "@verse-core": ["apps/verse-core/app"],
      "@verse-core/*": ["apps/verse-core/app/*"],

      "relayer/*": ["services/relayer/src/*"],
      "val/*": ["services/val-gateway/src/*"]
    }
  }
}
