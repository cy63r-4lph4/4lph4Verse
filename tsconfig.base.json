{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler", // or "nodenext"
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@verse/core/*": ["contracts/core/src/*"],
      "@verse/contracts/hirecore/*": ["contracts/hirecore/*"],
      "@verse/contracts/utils/*": ["contracts/utils/*"],

      "@verse/sdk/*": ["packages/sdk/*"],
      "@verse/assets/*": ["packages/brand-assets/public/*"],

      "@verse/ui/*": ["packages/ui/*"],
      "@verse/config/*": ["packages/config/src/*"],
      "@verse/providers/*": ["packages/providers/*"],

      "@verse/services/faucet/*": ["services/faucet/src/*"],
      "@verse/services/relayer/*": ["services/relayer/src/*"],

      "@verse/hirecore-web/*": ["apps/hirecore-web/*"],
      "@verse/leasevault-web/*": ["apps/leasevault-web/*"],
      "@verse-core/*": ["apps/verse-core/app/*"]
    }
  }
}
