{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "resolveJsonModule": true,

    "module": "esnext",
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,

    "paths": {
      "@verse/sdk": ["src"],
      "@verse/sdk/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../providers" }]
}
