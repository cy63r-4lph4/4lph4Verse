{
  "name": "4lph4verse",
  "version": "1.0.0",
  "private": true,
  "description": "The 4lph4Verse monorepo - apps, contracts, SDK, services.",
  "scripts": {
    "start": "turbo dev --parallel",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "deploy:core": "hardhat ignition deploy ignition/modules/CoreModule.ts --network ${npm_config_network:-localhost}",
    "deploy:hirecore": "hardhat ignition deploy ignition/modules/HireCoreModule.ts --network ${npm_config_network:-localhost}",
    "deploy:leasevault": "hardhat ignition deploy ignition/modules/LeaseVaultModule.ts --network ${npm_config_network:-localhost}",
    "deploy:all": "pnpm run deploy:core && pnpm run deploy:hirecore && pnpm run deploy:leasevault && pnpm run export",
    "export": "ts-node --esm scripts/utils/export-deployment.ts",
    "verify": "hardhat run scripts/utils/verify.ts --network ${npm_config_network:-localhost}",
    "clean": "rimraf artifacts cache ignition/deployments packages/sdk/utils/contract/deployedContracts.*"
  },
  "keywords": [],
  "author": "cy63r_4lph4",
  "license": "ISC",
  "packageManager": "pnpm@10.15.1",
  "workspaces": [
    "apps/*",
    "contracts",
    "packages/*",
    "services/*",
    "scripts"
  ],
  "devDependencies": {
    "@ethersproject/providers": "^5.8.0",
    "@nomicfoundation/hardhat-ethers": "^4.0.1",
    "@nomicfoundation/hardhat-ignition": "^3.0.3",
    "@nomicfoundation/hardhat-ignition-viem": "^3.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^3.0.2",
    "@typechain/hardhat": "^9.1.0",
    "@types/node": "^22.18.5",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "ethers": "^6.15.0",
    "forge-std": "^1.1.2",
    "hardhat": "^3.0.6",
    "hardhat-dependency-compiler": "^1.2.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.13",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.6",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@openzeppelin/contracts": "5.0.2",
    "@openzeppelin/contracts-upgradeable": "5.0.2",
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@storacha/cli": "^1.6.0",
    "@storacha/client": "^1.8.0",
    "@tanstack/react-query": "^5.87.4",
    "daisyui": "^5.1.10",
    "framer-motion": "^12.23.21",
    "lucide-react": "^0.544.0",
    "motion": "^12.23.12",
    "next": "^15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sonner": "^2.0.7",
    "tw-animate-css": "^1.3.8",
    "viem": "^2.37.9",
    "wagmi": "^2.16.9"
  },
  "type": "module"
}
